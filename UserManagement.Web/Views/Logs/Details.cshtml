@model UserManagement.Web.Models.Users.LogEntryViewModel

<h2>Log Details</h2>

<div class="card p-3">
    <p><strong>Id:</strong> @Model.Id</p>
    <p><strong>Action Type:</strong> @Model.ActionType</p>
    <p><strong>Date:</strong> @Model.ActionDate.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>Performed By:</strong> @Model.PerformedBy</p>
    <p><strong>Target User:</strong> @Model.TargetUser</p>
</div>

<a asp-controller="Logs" asp-action="Index" class="btn btn-secondary mt-3">Back to Logs</a>
